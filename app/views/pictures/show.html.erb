<div class = "center">
<h1 class = "under_dots">Photo詳細画面</h1>
<p class = "content">タイトル: <%= @picture.content %></p>
<p>画像: <%= image_tag @picture.image %></p>
<p class = "content">作成者: <%= @picture.user.name %></p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to "お気に入り解除する", favorite_path(id: @favorite.id), method: :delete, class: "btn btn-danger" %>
  <% else %>
   <%= link_to "お気に入りする", favorites_path(picture_id: @picture.id ), method: :post, class: "btn btn-primary" %>
  <% end %>
<% end %>

<%= link_to 'Photo一覧画面にもどる', pictures_path , :class => "btn btn-primary"%>
</div>
